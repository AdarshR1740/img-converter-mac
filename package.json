{
  "name": "img-converter",
  "version": "1.0.0",
  "description": "Desktop image converter for WebP, PNG, JPEG, AVIF",
  "author": "Your Name or Company",
  "main": "dist/main.js",
  "scripts": {
    "build:ts": "tsc",
    "build:renderer": "webpack --config webpack.config.js",
    "build": "npm run build:ts && npm run build:renderer",
    "start": "npm run build && electron .",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.startus.imageconverter",
    "productName": "Image Converter",
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.utilities",
      "icon": "assets/icon.icns"
    },
    "files": [
      "dist/**/*",
      "preload.js",
      "main.js",
      "index.html"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    }
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.32.0"
  },
  "devDependencies": {
    "@types/node": "^20.3.1",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "electron": "^25.0.0",
    "electron-builder": "^24.3.0",
    "eslint": "^8.43.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.6.1",
    "prettier": "^3.0.0",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  }
}
